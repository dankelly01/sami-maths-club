{
  "hosting": [
    {
      "target": "production",
      "public": "dist/sami-maths-club-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "function": "seoHost"
          // "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "dist/sami-maths-club-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "function": "seoHost"
          // "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
